page{
  background: #f0f0f0;
}

.personbox{
  height: 120px;
  background: white;
}

.user-avatarbox{
  height: 120px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-avatar{
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    border-radius: 10px;
    margin-left: 10px;
    margin-right: 20px;
    border: 1px solid #d0d0d0;
}

.informationbox{
  height: 110rpx;
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.userinfo{
  font-weight: bolder;
  font-size: 20px;
}

.phonenum{
  font-weight: 500;
  font-size: 15px;
  color: #bebebe;
}

.qrcodebox{
  height: 100rpx;
  margin-right: 2px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.qrcode{
  height: 15px;
  width: 15px;
}

.peoplelogin{
  font-weight: bold;
  font-size: 18px;
}

.bar{
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  margin-top: 10px;
  margin-bottom: 10px;
}

.bar2{
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  border-bottom: 1px solid #e0e0e0;
}

.smallbox{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10px;
}

.icon{
  width: 20px;
  height: 20px;
}

.score{
  height: 50px;
  line-height: 50px;
  font-weight: 550;
  margin-left: 10px;
}

.to{
  height: 50px;
  line-height: 50px;
  margin-right: 10px;
  font-size: 20px;
  color: #d0d0d0;
}


/* pages/pictureResult/pictureResult.wxss */

.bigcontainer{
  width: 100%;
  height: 200px;
}

.picturebox{
  height: 100px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}

.searchpicture{
  height: 100px;
  width: 120px;
}

.resultcontainer{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  margin-right: 10px;
}

.text{
  font-size: 20px;
  font-weight: bold;
  margin-left: 10px;
  margin-bottom: 10px;
}

.resultbox{
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #e0e0e0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 2px;
}

.result{
  font-weight: bold;
  height: 40px;
  line-height: 40px;
  color: #5b5b5b;
}

.to{
  font-weight: bolder;
  font-size: 20px;
  color: #d0d0d0;
  margin-right: 10px;
  height: 40px;
  line-height: 40px;
}